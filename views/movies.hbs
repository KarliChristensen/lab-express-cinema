<h1 class="text-5xl">Ironhack Cinema</h1>
<h2>Click on the movie to check the showtimes!</h2>
<div class="flex flex-wrap justify-center justify-evenly -mx-4">

  {{#each movies}}
    <div class="w-full md:w-1/3 px-4 m-40">
      <div class="rounded-lg overflow-hidden shadow-lg">
        <img
          class="w-full h-56 object-cover"
          src="{{this.image}}"
          alt="{{this.Title}}"
        />
        <div class="px-6 py-4">
          <h5 class="text-center text-xl font-bold mb-2">{{this.title}}</h5>
          <a href="/movies/{{this._id}}">See more</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>